<div class="tc-ctl-finfo-dialog tc-ctl-finfo-img-dialog tc-modal tc-hidden">
    <div class="tc-modal-background tc-modal-close"></div>
    <div class="tc-modal-img">{{#if src}}<img src="{{src}}" />{{/if}}</div>
</div>
<div class="tc-ctl-finfo-dialog tc-ctl-finfo-share-dialog tc-modal tc-hidden">
    <div class="tc-modal-background tc-modal-close"></div>
    <div class="tc-modal-window">
        <div class="tc-modal-header">
            <h3>{{i18n "shareQuery"}}</h3>
            <div class="tc-modal-close"></div>
        </div>
        <div class="tc-modal-body">
            <div class="tc-ctl-finfo-share-dialog-ctl"></div>
        </div>
        <div class="tc-modal-footer">
            <button type="button" class="tc-button tc-modal-close">{{i18n "close"}}</button>
        </div>
    </div>
</div>
