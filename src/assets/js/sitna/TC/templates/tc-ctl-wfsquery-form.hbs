        <input type="radio" id="{{controlId}}-cond-7" name="{{controlId}}-condition" value="neq" /><label for="{{controlId}}-cond-7" class="tc-ctl-btn tc-ctl-wfsquery-cond">{{i18n operators.neq.key}}</label>
