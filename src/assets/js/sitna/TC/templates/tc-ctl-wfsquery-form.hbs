        <input type="radio" id="{{controlId}}-cond-10" name="{{controlId}}-condition" value="starts" /><label for="{{controlId}}-cond-10" class="tc-ctl-btn tc-ctl-wfsquery-cond">{{i18n operators.starts.key}}</label>
