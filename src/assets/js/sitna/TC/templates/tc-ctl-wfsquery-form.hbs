<div>
    {{#if (countif attributes "FEATURE")}}
    <select class="tc-combo" name="attributes">
        <option value="">{{i18n "query.chooseAttrCombo"}}</option>
        {{#each attributes}}
            {{#unless (eq @key "FEATURE")}}
        <option value="{{@key}}"{{#if this.isGeometry}} class="tc-ctl-wfsquery-opt-geom"{{/if}}>{{@key}}{{#if this.isGeometry}} ({{i18n "geometry"}}){{/if}}</option>
            {{/unless}}
        {{/each}}
    </select>
    {{else}}
        <div class="tc-ctl-wfsquery-message tc-msg-warning">{{i18n "query.noAttributes"}}</div>
    {{/if}}
    
</div>
