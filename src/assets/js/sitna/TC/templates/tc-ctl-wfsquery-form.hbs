        <input type="radio" id="{{controlId}}-cond-1" name="{{controlId}}-condition" value="eq" /><label for="{{controlId}}-cond-1" class="tc-ctl-btn tc-ctl-wfsquery-cond">{{i18n operators.eq.key}}</label>
