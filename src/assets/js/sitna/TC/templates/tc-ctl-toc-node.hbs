<li {{#if children}} class="tc-ctl-toc-node" {{else}} class="tc-ctl-toc-node tc-ctl-toc-leaf" {{/if}} data-layer-name="{{name}}" data-layer-uid="{{uid}}">
    {{#if children}}<button type="button" class="tc-ctl-toc-collapse-btn"></button>{{/if}}
    <input type="checkbox" class="tc-toggle{{#unless name}} tc-hidden{{/unless}}" name="toc" value="{{name}}" {{#if isVisible}} checked{{/if}} /><span>{{title}}</span>
    <ul class="tc-ctl-toc-branch">
        {{#each children}}
        {{> tc-ctl-toc-node}}
        {{/each}}
    </ul>
</li>